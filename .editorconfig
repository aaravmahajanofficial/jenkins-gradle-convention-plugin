# EditorConfig: https://EditorConfig.org
# Root EditorConfig file
root = true

# Default for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

# Kotlin DSL files (preferred for Gradle convention plugins)
[*.{kts}]
indent_size = 4
max_line_length = 100

# Gradle scripts
[*.{gradle,gradle.kts}]
indent_size = 4
max_line_length = 100

# YAML
[*.{yaml,yml}]
indent_size = 2
max_line_length = 100

# JSON & JSONC
[*.{json,jsonc}]
indent_size = 2
max_line_length = 100

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = 0

# Documentation (limit line width for readability)
[docs/**/*.md]
max_line_length = 80

# Java
[*.java]
indent_size = 4
max_line_length = 120

# Kotlin
[*.{kt,kts}]
indent_size = 4
max_line_length = 120

# XML and related config
[*.{xml,xsd,xsl,xslt,wsdl}]
indent_size = 2
max_line_length = 100

# Properties files
[*.properties]
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_size = 2
insert_final_newline = true

# Batch files (Windows)
[*.{bat,cmd}]
end_of_line = crlf

# Web files
[*.{js,ts,jsx,tsx,css,scss,html}]
indent_size = 2

# Makefiles (use tabs)
[Makefile]
indent_style = tab

# Ignore files in build output
[build/**]
insert_final_newline = false
trim_trailing_whitespace = false
